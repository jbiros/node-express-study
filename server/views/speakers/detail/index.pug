extends ../../layout/index
block content
    .container
        .col-sm-8 
            article.speakerslist
                h3.speakerslist-title=speaker.title
                h5.speakerslist-name
                    | with 
                    a(href=`./${speaker.shortname}`)=speaker.name
                p.speakerslist-info
                    a(href=`./${speaker.shortname}`)
                    img.speakerslist-img.img-responsive.pull-left(src=`/images/speakers/${speaker.shortname}.jpg`, alt=`Photo of ${speaker.name}Post`)
                    !=speaker.description
            // container
        
        include ../../includes/sidebar